{
  "name": "bridges-goodreads",
  "version": "0.0.1",
  "description": "Goodreads Integration for Bridges",
  "scripts": {
    "build": "node utils/build.js",
    "lint": "xo",
    "lint-fix": "xo --fix"
  },
  "dependencies": {
    "dom-chef": "^5.0.0",
    "memoize": "^10.1.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@babel/core": "7.28.0",
    "@babel/preset-react": "7.27.1",
    "babel-loader": "10.0.0",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "13.0.0",
    "error-logger-webpack-plugin": "^1.1.0",
    "node-polyfill-webpack-plugin": "^4.1.0",
    "source-map-loader": "^5.0.0",
    "webpack": "5.101.0",
    "xo": "^0.40.1"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "globals": [
      "chrome"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^React$"
        }
      ]
    },
    "ignore": [
      "utils/",
      "webpack.config.js"
    ]
  }
}
